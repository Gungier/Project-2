<div id="background-image">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/logout">
          Logout
        </a>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-warning">Welcome <span class="member-name"></span></h1>
        <input type="text" val="" class="member-id" style="visibility: hidden">
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="task-container">
          <h1 class="text-warning">Tasks</h1>
          
          <table class="table table-bordered table-dark text-warning" id="table">
            <thead>
              <tr>
                <th scope="col">Current Tasks</th>
                <th scope="col">Points for task</th>
                <th scope="col">Complete task</th>
                <th scope="col">Delete task</th>
              </tr>
            </thead>
            <tbody>
              <tr>
               {{#each tasks_data}}
                  <tr>
                  <td>{{task}}</td>
                  <td>{{score}}</td>
                  <td><button class="chang-complete btn btn-warning" data-id="{{id}}" data-newcomplete="{{completed}}">
                      Mark Complete
                  </button></td>
                  <td><button class="delete-task btn btn-danger" data-id="{{id}}">Delete</button></td>
                  </tr>
               {{/each}}
               </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>



    <div class="row mt-5 align-items-start justify-content-between">
      <div class="col-5-sm card bg-dark text-warning">
        <div class="card-body">
          <h3>Add a New user</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
              <ul>
              {{#each tasks_data}}
                <p>{{name}}</p>
                <p>{{score}} </p>
              {{/each}}
              </ul>
              <tr id="form-row">
                <form id="author-form">
                  <td colspan="5">
                    <input placeholder="Enter a name" id="user-name" type="text" />
                  </td>
                  <td><button type="submit" id="create-user" class="btn btn-warning">Create User</button>
                  </td>
                </form>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="col-7-sm">
        <div class=" card bg-dark text-warning ml-4 mb-4" style="width: 30rem;">
          <div class="card-body">
            <form id="cms">
              <div class="form-group">
          
                <label for="Task">Task:</label>
                <textarea placeholder="Add New Chore" class="form-control" rows="3" id="task-body"></textarea>
                
                <label for="title">Points:</label>
                <input placeholder="How many points is this task worth" type="text" class="form-control" id="points">
                <br />
                
                <button id="submit-task" type="submit" class="btn btn-warning submit">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>